<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnBackground"
    tools:context=".activity.UpdateUserActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lay1"
                    android:layout_marginTop="64dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginEnd="27dp"
                    android:background="@drawable/round_card"
                    android:backgroundTint="?attr/colorOnSecondary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:fontFamily="@font/roboto_light"
                        android:paddingStart="15dp"
                        android:text="Nama Lengkap:"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:id="@+id/tvnamalengkap"
                        android:paddingTop="15dp"
                        android:paddingStart="15dp"
                        android:text="Nama Lengkap"
                        android:textSize="18sp"
                        android:textColor="?attr/colorSecondary"
                        android:ems="10"
                        android:background="@drawable/round_nametag"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/name"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lay2"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_card"
                    android:backgroundTint="?attr/colorOnSecondary"
                    app:layout_constraintEnd_toEndOf="@id/lay1"
                    app:layout_constraintStart_toStartOf="@id/lay1"
                    app:layout_constraintTop_toBottomOf="@+id/lay1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/address"
                        android:fontFamily="@font/roboto_light"
                        android:paddingStart="15dp"
                        android:text="Alamat:"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:id="@+id/tvalamat"
                        android:paddingTop="15dp"
                        android:paddingStart="15dp"
                        android:text="Alamat"
                        android:textSize="18sp"
                        android:textColor="?attr/colorSecondary"
                        android:ems="10"
                        android:background="@drawable/round_nametag"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/address"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lay3"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_card"
                    android:backgroundTint="?attr/colorOnSecondary"
                    app:layout_constraintEnd_toEndOf="@id/lay1"
                    app:layout_constraintStart_toStartOf="@id/lay1"
                    app:layout_constraintTop_toBottomOf="@+id/lay2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/nophone"
                        android:fontFamily="@font/roboto_light"
                        android:paddingStart="15dp"
                        android:text="Nomor Telepon:"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:id="@+id/tvnophone"
                        android:paddingTop="15dp"
                        android:paddingStart="15dp"
                        android:text="No Telp"
                        android:textSize="18sp"
                        android:textColor="?attr/colorSecondary"
                        android:ems="10"
                        android:background="@drawable/round_nametag"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/nophone"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lay4"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_card"
                    android:backgroundTint="?attr/colorOnSecondary"
                    app:layout_constraintEnd_toEndOf="@id/lay1"
                    app:layout_constraintStart_toStartOf="@id/lay1"
                    app:layout_constraintTop_toBottomOf="@+id/lay3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/email"
                        android:fontFamily="@font/roboto_light"
                        android:paddingStart="15dp"
                        android:text="e-Mail:"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:id="@+id/tvemail"
                        android:paddingTop="15dp"
                        android:paddingStart="15dp"
                        android:text="email"
                        android:textSize="18sp"
                        android:textColor="?attr/colorSecondary"
                        android:ems="10"
                        android:background="@drawable/round_nametag"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/email"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/logout"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/buttonSize"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="80dp"
                    android:layout_marginStart="80dp"
                    android:background="@drawable/round_button"
                    app:backgroundTint="@color/merun"
                    android:text="Keluar"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:fontFamily="@font/roboto_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lay4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:id="@+id/teksatas"
                    android:text="Version 1.1"
                    android:textSize="16sp"
                    android:textColor="?attr/colorSecondary"
                    android:fontFamily="@font/roboto_light"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logout"/>

                <TextView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Info"
                    android:textColor="@color/colorSecondary"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/nunito"
                    app:layout_constraintEnd_toEndOf="@+id/profile"
                    app:layout_constraintStart_toStartOf="@+id/profile"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profil"
                    android:textColor="@color/colorSecondary"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/nunito_black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit" />

                <Button
                    android:id="@+id/more"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_more"
                    app:backgroundTint="?attr/colorPrimaryVariant"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout >