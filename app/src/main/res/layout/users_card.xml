<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorOnSecondary">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_card"
        app:cardBackgroundColor="?attr/colorOnSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:background="@drawable/round_card"
            android:backgroundTint="@android:color/white">

            <TextView
                android:id="@+id/namalengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="User Name"
                android:textColor="@color/statusBarColor"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/alamat"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="alamat"
                android:layout_marginTop="5dp"
                android:textColor="#333333"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/namalengkap"
                app:layout_constraintTop_toBottomOf="@+id/namalengkap"/>

            <TextView
                android:id="@+id/notelp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="No. Telp"
                android:layout_marginTop="5dp"
                android:textColor="#333333"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/alamat"
                app:layout_constraintTop_toBottomOf="@+id/alamat" />

            <TextView
                android:id="@+id/email"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="email"
                android:layout_marginTop="5dp"
                android:textColor="#333333"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/notelp"
                app:layout_constraintTop_toBottomOf="@+id/notelp" />

            <ImageView
                android:id="@+id/menu"
                android:src="@drawable/ic_more"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:ignore="ContentDescription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>